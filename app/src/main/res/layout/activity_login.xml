<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.xinhe.cashloan.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/login_ll"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/login_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/length_15">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="49.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="登录"
                    android:textColor="@color/text_color_32"
                    android:textSize="@dimen/size_18" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp">

                <ImageView
                    android:id="@+id/login_iv1"
                    android:layout_width="@dimen/length_12"
                    android:layout_height="@dimen/length_19"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/length_20"
                    android:src="@mipmap/login_phone" />

                <EditText
                    android:id="@+id/login_et1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/login_iv1"
                    android:paddingLeft="@dimen/length_5"
                    android:layout_marginRight="@dimen/length_33"
                    android:hint="请输入手机号"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:background="@color/bg_color_ff"
                    android:textColor="@color/text_color_32"
                    android:textColorHint="@color/text_color_b3"
                    android:textSize="@dimen/size_14"
                    />

                <ImageView
                    android:id="@+id/login_iv11"
                    android:layout_width="@dimen/length_13"
                    android:layout_height="@dimen/length_13"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/length_20"
                    android:src="@mipmap/login_cancel"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_e8"
                android:layout_marginTop="@dimen/length_5"
                android:layout_marginLeft="@dimen/length_20"
                android:layout_marginRight="@dimen/length_20"
                />
            <RelativeLayout
                android:id="@+id/login_rl_yanzheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/login_iv_yanzheng"
                    android:layout_width="@dimen/length_15"
                    android:layout_height="@dimen/length_18"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/length_20"
                    android:src="@mipmap/login_yanzheng" />

                <EditText
                    android:id="@+id/login_et_yanzheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/login_iv_yanzheng"
                    android:layout_toLeftOf="@+id/login_iv1_yanzheng"
                    android:hint="请输入右侧结果"
                    android:maxLength="4"
                    android:paddingLeft="@dimen/length_5"
                    android:inputType="number"
                    android:textColor="@color/text_color_32"
                    android:textColorHint="@color/text_color_b3"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/size_14"
                    android:background="@color/bg_color_ff"/>

                <ImageView
                    android:id="@+id/login_iv1_yanzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/length_20"
                    android:paddingLeft="@dimen/length_2"
                    android:paddingRight="@dimen/length_2"
                    />

            </RelativeLayout>


            <View
                android:id="@+id/login_v_yanzheng"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_e8"
                android:layout_marginTop="@dimen/length_5"
                android:layout_marginLeft="@dimen/length_20"
                android:layout_marginRight="@dimen/length_20"
                android:visibility="visible"
                />


            <RelativeLayout
                android:id="@+id/login_rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/login_iv2"
                    android:layout_width="@dimen/length_15"
                    android:layout_height="@dimen/length_19"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/length_20"
                    android:src="@mipmap/login_password" />

                <EditText
                    android:id="@+id/login_et2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/login_iv2"
                    android:layout_toLeftOf="@+id/login_iv12"
                    android:hint="请输入验证码"
                    android:maxLength="4"
                    android:paddingLeft="@dimen/length_5"
                    android:textColor="@color/text_color_32"
                    android:textColorHint="@color/text_color_b3"
                    android:textSize="@dimen/size_14"
                    android:background="@color/bg_color_ff"/>

                <TextView
                    android:id="@+id/login_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/length_20"
                    android:paddingLeft="@dimen/length_2"
                    android:paddingRight="@dimen/length_2"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/text_color_huang"
                    android:text="验证码"/>

                <View
                    android:id="@+id/login_line"
                    android:layout_width="@dimen/length_1"
                    android:layout_height="@dimen/length_21"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/login_tv2"
                    android:background="@color/bg_color_e8"
                    android:layout_marginRight="@dimen/length_10"/>

                <ImageView
                    android:id="@+id/login_iv12"
                    android:layout_width="@dimen/length_13"
                    android:layout_height="@dimen/length_13"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/login_line"
                    android:src="@mipmap/login_cancel"
                    android:layout_marginRight="@dimen/length_10"
                    android:visibility="gone"/>
            </RelativeLayout>
            <View
                android:id="@+id/login_v"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_e8"
                android:layout_marginTop="@dimen/length_5"
                android:layout_marginLeft="@dimen/length_20"
                android:layout_marginRight="@dimen/length_20"
                android:visibility="gone"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_selector"
                    android:layout_centerInParent="true"
                    android:text="登录"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="@dimen/length_5"
                    android:textSize="@dimen/size_15"
                    android:textColor="@color/login_text_selector"/>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/login_iv"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_alignTop="@+id/login_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-49.5dp"
            android:src="@mipmap/login_logo" />
    </RelativeLayout>

</ScrollView>
