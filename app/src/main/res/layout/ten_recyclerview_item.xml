<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="85dp"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/length_5"
    android:layout_marginRight="@dimen/length_5"
    android:background="@drawable/ten_item_bg"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/text_color_ef"

    app:cardElevation="0px"
    app:cardMaxElevation="2px"
    >

    <RelativeLayout 
        android:id="@+id/recycleview_item_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/recycleview_item_iv"
        android:layout_width="37.5dp"
        android:layout_height="37.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
            app:riv_oval="true"
        />
        <TextView 
            android:id="@+id/recycleview_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#323232"
            android:textSize="13sp"
            android:text="闪电借款"
            android:gravity="center"
            android:lines="1"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
    

</android.support.v7.widget.CardView>