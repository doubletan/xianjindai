<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/new_fragment_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        style="@style/BannerDefaultStyle"
        app:banner_isNeedShowIndicatorOnOnlyOnePage="true"
        app:banner_pointDrawable="@drawable/point_selector"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_transitionEffect="defaultEffect"
        >
    </cn.bingoogolapple.bgabanner.BGABanner>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >
        <com.xinhe.cashloan.view.VerticalViewPager
            android:id="@+id/new_fragment_vvp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_10">

        </com.xinhe.cashloan.view.VerticalViewPager>
        <TextView
            android:id="@+id/new_fragment_loan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日已有166857人申请"
            android:textSize="@dimen/size_11"
            android:textColor="@color/text_color_red"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/length_10"
            android:layout_marginTop="8.5dp"
            />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_10"
        android:layout_centerVertical="true"
        android:background="@color/text_color_ef"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main_fragment_ll1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/main_fragment_iv1"
                android:layout_marginTop="@dimen/length_10"/>

            <TextView
                android:id="@+id/main_fragment_ll1_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款大全"
                android:textColor="@color/text_color_00"
                android:layout_marginTop="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/main_fragment_ll1_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亲测好产品"
                android:textColor="@color/bg_color_99"
                android:layout_marginTop="@dimen/length_3"
                android:textSize="9sp"
                android:layout_marginBottom="@dimen/length_10"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_fragment_ll2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/main_fragment_iv2"
                android:layout_marginTop="@dimen/length_10"/>

            <TextView
                android:id="@+id/main_fragment_ll2_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精品推荐"
                android:textColor="@color/text_color_00"
                android:layout_marginTop="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/main_fragment_ll2_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="万千贷友极力推荐"
                android:textColor="@color/bg_color_99"
                android:layout_marginTop="@dimen/length_3"
                android:textSize="9sp"
                android:layout_marginBottom="@dimen/length_10"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_fragment_ll3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/main_fragment_iv3"
                android:layout_marginTop="@dimen/length_10"/>

            <TextView
                android:id="@+id/main_fragment_ll3_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要办卡"
                android:textColor="@color/text_color_00"
                android:layout_marginTop="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/main_fragment_ll3_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="办卡 取现 代还"
                android:textColor="@color/bg_color_99"
                android:layout_marginTop="@dimen/length_3"
                android:textSize="9sp"
                android:layout_marginBottom="@dimen/length_10"
                />
        </LinearLayout>
    </LinearLayout>

    <!--<GridView-->
        <!--android:id="@+id/main_classification_gv"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:layout_marginLeft="15dp"-->
        <!--android:layout_marginRight="15dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:gravity="center"-->
        <!--android:horizontalSpacing="15dp"-->
        <!--android:listSelector="#ffffff"-->
        <!--android:numColumns="auto_fit"-->
        <!--android:stretchMode="columnWidth"-->
        <!--android:verticalSpacing="10dp" >-->
    <!--</GridView>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_10"
        android:layout_centerVertical="true"
        android:background="@color/text_color_ef"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/main_creditcard_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门推荐"
                android:textColor="@color/text_color_00"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/main_creditcard_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/main_creditcard_tv1"
                android:text="HOT"
                android:textColor="#42dca7"
                android:textSize="14sp"
                android:typeface="sans" />
        </RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_rv"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:scrollbars="none" >
    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_10"
        android:layout_centerVertical="true"
        android:background="@color/text_color_ef"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/main_new_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新品上线"
                android:textColor="@color/text_color_00"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/main_new_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/main_new_tv1"
                android:text="NEW"
                android:textColor="#f90000"
                android:textSize="14sp"
                android:typeface="sans" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
