<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/bg_color_ff"
    android:background="@drawable/product_item_selector"
    card_view:cardElevation="0dp"


    app:cardElevation="0px"
    app:cardMaxElevation="2px"
    app:cardUseCompatPadding="false"
    app:contentPaddingBottom="-20dp"
    app:contentPaddingTop="-20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        >
        <com.itheima.roundedimageview.RoundedImageView
            android:id="@+id/main_product_item_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_centerVertical="true"
            android:elevation="2dp"
            android:scaleType="fitCenter"
            app:riv_border_width="0dip"
            app:riv_border_color="#BDBDBD"
            app:riv_oval="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/main_product_item_iv"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_marginTop="@dimen/length_10"
            android:layout_marginBottom="@dimen/length_10"
            android:layout_toLeftOf="@+id/product_item_iv2"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/main_product_item_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="简介"
                    android:textSize="@dimen/size_13"
                    android:lines="1"
                    android:textColor="@color/text_color_00"
                    />
                <ImageView
                    android:layout_width="36.5dp"
                    android:layout_height="18.5dp"
                    android:src="@mipmap/main_product_item1"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/main_product_item_tv1"
                    android:layout_marginLeft="@dimen/length_10"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/main_product_item_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="简介"
                    android:textSize="@dimen/size_11"
                    android:lines="1"
                    android:textColor="@color/text_color_66"
                    />
                <TextView
                    android:id="@+id/main_product_item_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="人申请"
                    android:textSize="@dimen/size_10"
                    android:lines="1"
                    android:textColor="@color/text_color_66"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/length_10"
                    />
                <TextView
                    android:id="@+id/main_product_item_tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="简介"
                    android:textSize="@dimen/size_10"
                    android:lines="1"
                    android:textColor="#2196f3"
                    android:layout_toLeftOf="@+id/main_product_item_tv4"
                    />
                <TextView
                    android:id="@+id/main_product_item_tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="已有"
                    android:textSize="@dimen/size_10"
                    android:lines="1"
                    android:textColor="@color/text_color_66"
                    android:layout_toLeftOf="@+id/main_product_item_tv5"
                    />
            </RelativeLayout>
            
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/text_color_ef"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>
