<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/product_choose_pop"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/main_fragment"
    >
   <include layout="@layout/line_da"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="@color/bg_color_ff"
       >
      <Button
          android:id="@+id/product_choose_pop_btn1"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:layout_weight="1"
          android:background="@drawable/product_choose_pop_selector"
          android:textColor="@color/product_choose_pop_color_selector"
          android:textSize="@dimen/size_12"
          android:text="默认"
          android:layout_marginLeft="@dimen/length_10"
          android:layout_marginRight="@dimen/length_5"
          android:layout_marginTop="@dimen/length_10"
          android:layout_marginBottom="@dimen/length_5"
          />
      <Button
          android:id="@+id/product_choose_pop_btn2"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:layout_weight="1"
          android:background="@drawable/product_choose_pop_selector"
          android:textColor="@color/product_choose_pop_color_selector"
          android:textSize="@dimen/size_12"
          android:text="金额从高到低"
          android:layout_marginLeft="@dimen/length_5"
          android:layout_marginRight="@dimen/length_5"
          android:layout_marginTop="@dimen/length_10"
          android:layout_marginBottom="@dimen/length_5"
          />
      <Button
          android:id="@+id/product_choose_pop_btn3"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:layout_weight="1"
          android:background="@drawable/product_choose_pop_selector"
          android:textColor="@color/product_choose_pop_color_selector"
          android:textSize="@dimen/size_12"
          android:text="利率从低到高"
          android:layout_marginLeft="@dimen/length_5"
          android:layout_marginRight="@dimen/length_10"
          android:layout_marginTop="@dimen/length_10"
          android:layout_marginBottom="@dimen/length_5"
          />
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="@color/bg_color_ff"
       >
      <Button
          android:id="@+id/product_choose_pop_btn4"
          android:layout_width="105dp"
          android:layout_height="30dp"
          android:background="@drawable/product_choose_pop_selector"
          android:textColor="@color/product_choose_pop_color_selector"
          android:textSize="@dimen/size_12"
          android:text="期限从高到低"
          android:layout_marginLeft="@dimen/length_10"
          android:layout_marginRight="@dimen/length_10"
          android:layout_marginTop="@dimen/length_5"
          android:layout_marginBottom="@dimen/length_10"
          />
   </LinearLayout>

   <RelativeLayout
       android:id="@+id/product_choose_pop_rl"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       ></RelativeLayout>

</LinearLayout>
